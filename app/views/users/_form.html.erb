<div class="row">
  <div class="col-md-4 col-md-offset-4 text-left">
    <div class="register-form">
      <%= form_for :user, url: users_path do |f| %>
        <ul class="no-list-style">
          <li><%= f.label :username, class: "form-field" %></li>
          <li><%= f.text_field :username, class: "form-field" %></li>
          <li><%= f.label :email, class: "form-field" %></li>
          <li><%= f.text_field :email, class: "form-field" %></li>
          <li><%= f.label :password, class: "form-field" %></li>
          <li><%= f.password_field :password, class: "form-field" %></li>
          <li><%= f.label :confirm_password, class: "form-field" %></li>
          <li><%= f.password_field :password_confirmation, class: "form-field" %></li>
        </ul>

        <div class="col-md-7 more-login-options text-left">
          <%= link_to "more sign up options", '#' %>
        </div>

        <div class="col-md-5 text-right">
          <%= submit_tag "Sign up", class: "login-register-button white" %>
        </div>

        <div class="row">
          <div class="col-md-12 text-center">
            <p class="policy">By registering, you agree to the <span class="registration-policy">privacy policy</span> and <span class="registration-policy">terms of service.</span></p>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
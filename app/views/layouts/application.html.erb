<!DOCTYPE html>
<html>
  <head>
    <title>SmackUndertone</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="row main-navbar">
      <div class="static-width">

        <div class="col-md-5 col-md-offset-1">
          <!-- page logo -->
        </div>

        <div class="col-md-5 text-right">
          <nav>
            <ul class="no-list-style main-navbar-link-container">
              <li class="inline main-navbar-link"><%= link_to "sign up", register_path, class: "link primary-gray" %></li>
              <li class="inline main-navbar-link"><%= link_to "log in", login_path, class: "link primary-gray" %></li>
              <li class="inline main-navbar-link"><%= link_to "tour", root_path, class: "link primary-gray" %></li>
              <li class="inline main-navbar-link"><%= link_to "help", root_path, class: "link primary-gray" %></li>
              <li class="inline main-navbar-link"><input placeholder="search" /></li>
            </ul>
          </nav>
        </div>

      </div>
    </div>

    <div class="row secondary-navbar">
      <div class="static-width">

        <div class=" col-md-5 col-md-offset-1">
          <div class="col-md-6">
            <%= link_to (image_tag "stackoverflow-logo.png", class: "logo"), root_path, class: "link secondary-navbar-logo" %>
          </div>
        </div>

        <div class="col-md-5 text-right">
          <nav>
            <ul class="no-list-style secondary-navbar-link-container">
              <li class="inline secondary-navbar-link"><%= link_to "Questions", questions_path, class: "link white" %></li>
              <li class="inline secondary-navbar-link"><%= link_to "Jobs", root_path, class: "link white" %></li>
              <li class="inline secondary-navbar-link"><%= link_to "Tags", root_path, class: "link white" %></li>
              <li class="inline secondary-navbar-link"><%= link_to "Users", root_path, class: "link white" %></li>
              <li class="inline secondary-navbar-link"><%= link_to "Badges", root_path, class: "link white" %></li>
              <li class="inline secondary-navbar-link"><%= link_to "Ask Question", new_question_path, class: "link white" %></li>
            </ul>
          </nav>
        </div>

      </div>
    </div>

    <%= yield %>

  </body>
</html>
